# Database
DATABASE_URL=sqlite:///./var_products.db

# Anthropic API (required for datasheet extraction)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# PDF Output
PDF_OUTPUT_DIR=./output
PDF_EXPIRY_HOURS=24

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# API Keys - Add one per user in format API_KEY_{USERNAME}=key
# Example:
API_KEY_ADMIN=admin-secret-key-change-me
API_KEY_JOHN=johns-api-key-here
API_KEY_SARAH=sarahs-api-key-here
